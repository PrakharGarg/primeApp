<table id="chat_logs" class="table table-striped">
  <thead>
  <tr>
    <th>User</th>
    <th>Message</th>
    <th>Date</th>
    <th colspan="3" width="30%">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @chat_logs.each do |chat_log| %>
  <tr>
    <td><%= chat_log.user.display_name %></td>
    <td><%= chat_log.message %></td>
    <td><%= chat_log.created_at.in_time_zone('EST').strftime('%b %d, %Y at %l:%M %p') %></td>
    <td><%= link_to 'Show', chat_log, class: 'btn btn-default   btn-small', remote:true if current_user.can_read?(chat_log) %></td>
    <td><%= link_to 'Edit', edit_chat_log_path(chat_log), class: 'btn btn-warning btn-small', remote:true if current_user.can_update?(chat_log) %></td>
    <td><%= link_to 'Delete', chat_log_delete_path(chat_log), class: 'btn btn-danger btn-small', remote:true if current_user.can_delete?(chat_log) %></td>
  </tr>
  <% end %>
  </tbody>
</table>